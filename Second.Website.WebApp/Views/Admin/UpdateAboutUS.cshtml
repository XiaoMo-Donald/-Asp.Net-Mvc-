@model Second.Website.Model.AboutUS

@{
    ViewBag.Title = "UpdateAboutUS";
}
<marquee scrollamount="8" direction="up" behavior="slide">
    <h2>修改关于我们的信息</h2>
</marquee>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AboutID)

        <div class="form-group">
            @Html.Label("注意：编辑的每项内容都不支持HTML标记", htmlAttributes: new { @style = "color:red;margin-left:100px;" })
            <br /><br />
            @Html.Label("关于我们标题", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AboutTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AboutTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("关于我们内容", htmlAttributes: new { @class = "control-label col-md-2" })         
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.AboutContent,5,50, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AboutContent, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("关于我们详细", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.AboutUsMoreLink,3,50, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AboutUsMoreLink, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存更改" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回管理页", "ShowAboutUS")
</div>
