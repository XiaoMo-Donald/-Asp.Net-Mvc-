@model Second.Website.Model.SubpageProduct

@{
    ViewBag.Title = "删除一个产品";
}
<style>
    div dl dt {
        height: 50px;
        line-height: 50px;
    }

    div dl dd {
        height: 50px;
        line-height: 50px;
    }
</style>
<h2>删除一条产品信息</h2>

<h3>本操作执行后不可恢复，请谨慎操作！</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div>
    <hr />
    <dl class="dl-horizontal">
        @Html.HiddenFor(model=>model.ProductID)
        <dt>
            产品名称
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt>
            产品信息
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductInfo)
        </dd>
        <dt>
            产品发布时间
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTime)
        </dd>
        <dt>
            产品图标
        </dt>
        <dd>
            <img src="@Html.DisplayFor(model => model.ProductPhotoFile)" alt="产品图标" width="50" height="50" /> 
        </dd>

        <dt>
            产品类别
        </dt>

        <dd>
            @if (Model.ClassID == 1)
            {
                @Html.DisplayName("电脑产品");
            }
            @if (Model.ClassID == 2)
            {
                @Html.DisplayName("手机产品");
            }
            @if (Model.ClassID == 3)
            {
                @Html.DisplayName("科技商品");
            }
        </dd>

        <dt>         
            是否为特色产品
        </dt>

        <dd>
          
            @if (Model.Features == 0)
            {
                @Html.DisplayName("非特色产品");
            }
            @if (Model.Features == 1)
            {
                @Html.DisplayName("特色产品");
            }
        </dd>
        <dt>
            电脑版下载地址（完整的URL）
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PcDownLink)
        </dd>
        <dt>
            安卓版下载地址（完整的URL）
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ardDownLink)
        </dd>
        <dt>
            IOS版下载地址（完整的URL）
        </dt>
        <dd>
            @Html.DisplayFor(model => model.iosDownLink)
        </dd>
        <dt>
            科技商品购买地址（完整的URL）
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BuyLink)
        </dd>
    </dl>

        <div class="form-actions no-color">
            <input type="submit" value="确认删除" class="btn btn-default" />&nbsp; |&nbsp;&nbsp;&nbsp;
           @Html.ActionLink("返回产品信息管理页", "ShowSubpageProduct") &nbsp;丨&nbsp;@Html.ActionLink("返回后台首页", "Index")
        </div>    
</div>
}
