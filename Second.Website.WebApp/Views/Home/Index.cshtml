        <a href="###" class="toolbar-item toolbar-item-feedback"></a>
        <a href="###" class="toolbar-item toolbar-item-app">
            <span class="toolbar-layer"></span>
        </a>
        <a href="javascript:scroll(0,0)" id="top" class="toolbar-item toolbar-item-top"></a>
    </div>
    <!--右侧浮动菜单代码结束-->
    <!--网页主体头部-->
    <header>
        <div class="head">
            <div class="logo">
                <!--<h1>网页LOGO</h1>-->
                @*<img src="~/Content/Second/images/logo.png" alt="02小组">*@
                <img src="@Html.DisplayFor(modelItem => modelItem.Companylogo)" alt="02小组">
            </div>
            <div class="nav">
                <ul>
                    <li><a href="/">首页</a></li>
                    <li><a href="#aMark">公司介绍</a></li>
                    <li><a href="#pMark">产品服务</a></li>
                    <li><a href="#tMark">团队阵容</a></li>
                    <li><a href="#cMark">联系我们</a></li>
                    <li><img src="/Content/Second/images/head_nav_menu_o.png" alt="更多" title="展开更多"></li>
                </ul>
            </div>

            <!--手机端和Pad端导航菜单-->
            <div class="m-nav">
                <img src="/Content/Second/images/head_nav_menu_o.png" alt="更多" title="展开更多" id="m_nav_menu">
            </div>
            <div class="m-inner-nav">
                <a href="/">首页</a>
                <a href="#aMark">公司介绍</a>
                <a href="#pMark">产品服务</a>
                <a href="#tMark">团队阵容</a>
                <a href="#cMark">联系我们</a>
                <a href="###">招贤纳士</a>
            </div>
            <!--手机端和Pad端导航菜单结束-->

        </div>
    </header>

    <!--网页轮播图-->
    <div class="wrap" id="wrap">
        <ul class="banner">
            <li><img src="~/Content/Second/images/banner_1.png" alt="02小组轮播"></li>
            <li><img src="~/Content/Second/images/banner_2.png" alt="02小组轮播"></li>
            <li><img src="~/Content/Second/images/banner_3.png" alt="02小组轮播"></li>
            <li><img src="~/Content/Second/images/banner_4.png" alt="02小组轮播"></li>
        </ul>
        <div class="bannerText"><span>企业核心<br />@Html.Raw(Model.CompanyCulture)</span><span><a href="###">前往体验</a></span></div>
        <ul class="menu"></ul>
    </div>

    <!--网页主体内容-->
    <section>
        <div class="main">

            <!--1.公司介绍-->
            <div class="show aboutus" id="aMark">
                <div class="aboutCentent">
                    <div class="centent">
                        <div class="title">
                            <img src="~/Content/Second/images/about.png" alt="关于我们">
                        </div>
                        <div class="about">
                            <h4 class="a_title">关于本公司</h4>
                        </div>
                    </div>
                   @foreach (var item in (ViewBag.About as List<AboutUS>))
                   {
                    <div class="t_title">
                        <h3>@item.AboutTitle</h3>
                    </div>
                    <div class="main_txt">
                        <p>
                          @Html.Raw(item.AboutContent)<a href="@item.AboutUsMoreLink" target="">【了解更多】</a>
                        </p>
                    </div>
                    }
                    
                    <div class="icons">
                        <ul>
                            <li>
                                <img src="~/Content/Second/images/icon/icon01.png">
                                <p class="icon_title">信誉第一</p>
                                <p class="txt">我们公司运营超过十年</p>
                                <p class="txt">皆以诚信为本</p>
                            </li>
                            <li>
                                <img src="~/Content/Second/images/icon/icon02.png">
                                <p class="icon_title">合作融资</p>
                                <p class="txt">我们可以让您的投资变</p>
                                <p class="txt">得更加有价值</p>
                            </li>
                            <li>
                                <img src="~/Content/Second/images/icon/icon03.png">
                                <p class="icon_title">经验丰富</p>
                                <p class="txt">我们公司经历了十年风</p>
                                <p class="txt">雨拥有丰富经验</p>
                            </li>
                            <li class="last_icon">
                                <img src="~/Content/Second/images/icon/icon04.png">

                                <p class="icon_title">团队开发</p>
                                <p class="txt">我们拥有强大的团队让</p>
                                <p class="txt">项目开发更简单</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!--2.产品展示：PC端展示6个产品 分两行展示-->
            <div class="show products" id="pMark">
                <div class="productsContent">
                    <div class="title02">
                        <img src="~/Content/Second/images/title02.png">
                    </div>
                    <div class="event_title">
                        <img src="~/Content/Second/images/xian03.png">
                        <h4 class="c_show">特色产品</h4>
                    </div>
                    <div class="products_list">
                        <ul>
                            @foreach (var item in (ViewBag.HomeFeaturesList as List<SubpageProduct>))
                            {
                                <li>
                                    <div class="img_box">
                                        <a href="###">
                                            <img src="@item.ProductPhotoFile" alt="产品小图" width="90" height="90">
                                        </a>
                                    </div>
                                    <div class="products_Info">
                                        <h5>@item.ProductName</h5>
                                        <p>@item.ProductInfo</p>
                                        <div class="download_box">
                                            <div class="btn_box">
                                                <a href="###">更多介绍</a>
                                                <a href="@item.PcDownLink">点击下载</a>
                                                <p>@item.ProductTime.ToShortDateString()</p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }                         
                        </ul>
                    </div>
                    <div class="btn">
                        <a href="Home/Product" title="更多产品" target="_blank">MORE<span>+</span></a>
                    </div>
                </div>
            </div>

            <!--3.团队成员介绍-->
            <div class="show team" id="tMark">
                <div class="teamBox">
                    <div class="title03">
                        <img src="~/Content/Second/images/title03.png">
                    </div>
                    <div class="event_title">
                        <img src="~/Content/Second/images/xian03.png">
                        <h4 class="c_show">团队成员</h4>
                    </div>
                    <div class="teamPic">
                        <ul>
                            @foreach (var item in ViewBag.HomeEmployeeList)
                            {
                                <li>
                                    <div class="port-1 effect-2">
                                        <img src="@item.EmpoloyeePhoto" alt="团队成员图片">
                                        <div class="text-desc">
                                            <h3>@item.EmpoloyeeName</h3>
                                            <p><b>项目负责：</b><span>@item.EmpoloyeePost</span></p>
                                            <p>@item.EmpoloyeeInfo</p>
                                            <a href="###" class="t_btn">详细介绍</a>
                                        </div>
                                    </div>
                                </li>
                            }
